{
  "extends": "../../../tsconfig.base.json", // Adjust path to your root/base tsconfig
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "composite": true // Often used in monorepos with project references
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}